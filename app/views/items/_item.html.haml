.feed.js-display-action{:class => ('unread' unless current_user.items.include? item)}
  .row
    .col-md-3
      .name
        - if feed.custom_name(current_user).size > 45
          =feed.custom_name(current_user)[0..45]
          = "..."
        -else
          =feed.name
    .col-md-7
      = link_to item.title, view_feed_item_path(feed, item), {:class => 'title', :target => '_blank'}
    .col-md-1.published-date
      =l item.published_at, format: :short
    .col-md-1.actions.hide
      %ul.list-unstyled.list-inline
        %li
          %a.js-show-content{:href => '#', 'data-action' => 'show', 'data-feed' => feed.id, 'data-item' => item.id, 'data-item-fetched' => false, :title => 'Voir le contenu'}
            %span.glyphicon.glyphicon-plus
        %li
          =link_to view_feed_item_path(feed, item), {:title => 'Voir l\'article original', :target => '_blank'} do
            %span.glyphicon.glyphicon-share
        -unless current_user.items.include? item
          %li
            %a.js-mark-read{:href => '#' ,'data-feed' => feed.id, 'data-item' => item.id, :title => 'Marquer comme lu'}
              %span.glyphicon.glyphicon-ok
  .row.content.hide
