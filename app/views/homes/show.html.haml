- @feeds.each do |feed|
  - feed.items.limit(5).each do |item|
    .feed
      .row
        .col-md-3
          .name=feed.name
        .col-md-6
          = link_to item.title, item.url, {:class => 'title'}
        .col-md-3.actions
          %ul.list-unstyled.list-inline
            %li=link_to 'Voir l\'article original', item.url
            %li
              %a{:href => '#'} Marquer comme lu
      .row
        .col-md-12.item-content
          %p!= item.description
        /%br
        /%p!= item.content
        /%br
        -unless item.enclosure_url.nil?
          .col-md-12
            %img.thumbnail{:src => item.enclosure_url}
