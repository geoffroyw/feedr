- @items.each do |item|
  .feed.js-display-action.unread
    .row
      .col-md-3
        .name
          - if item.feed.name.size > 45
            =item.feed.name[0..45]
            = "..."
          -else
            =item.feed.name
      .col-md-7
        = link_to item.title, item.url, {:class => 'title'}
      .col-md-2.actions.hide
        %ul.list-unstyled.list-inline
          %li
            %a.js-show-content{:href => '#', 'data-action' => 'show'}
              %span.glyphicon.glyphicon-plus
          %li
            %a{:href => item.url}
              %span.glyphicon.glyphicon-share
            %li
            %a{:href => '#'} Marquer comme lu
    .row.content.hide
      .col-md-12.item-content
        %p!= item.description
        %p!= item.content
      /%br
      -unless item.enclosure_url.nil?
        .col-md-12
          %img.img-thumbnail{:src => item.enclosure_url}
